    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.4.0",
    "@types/luxon": "^3.2.0",
    "@types/node": "^18.11.10",
    "@types/nodemailer": "^6.4.7",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-google-oauth20": "^2.0.11",
